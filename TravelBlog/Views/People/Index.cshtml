@model IEnumerable<TravelBlog.Models.People>

@{
    ViewData["Title"] = "People";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>People</h1>

<table class="table table-striped">
	<tr>
		<th>@Html.DisplayNameFor(model => model.Name)</th>
		<th>@Html.DisplayNameFor(model => model.Experiences.Title)</th>
		<th>Delete</th>
        <th>Edit</th>
	</tr>

	@foreach(var person in Model)
	{
        <tr>
		    <td>@Html.DisplayFor(model => person.Name)</td>
		    <td>@Html.DisplayFor(model => person.Experiences.Title)</td>
		    <td><button class="btn btn-info">@Html.ActionLink("X", "Delete", new { id = person.PeopleId })</button></td>
            <td> <button class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new { id = person.PeopleId})</button></td>
	    </tr>
	}
</table>

<button>@Html.ActionLink("Add new person", "Create")</button>