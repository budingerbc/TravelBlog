@model IEnumerable<TravelBlog.Models.Experience>

@{
    ViewData["Title"] = "Experiences";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Experiences</h1>

<table class="table">
	<tr>
		<th>@Html.DisplayNameFor(model => model.Title)</th>
		<th>@Html.DisplayNameFor(model => model.Description)</th>
		<th>@Html.DisplayNameFor(model => model.Locations.LocationCity)</th>
		<th>@Html.DisplayNameFor(model => model.Locations.LocationCountry)</th>
	</tr>

    @foreach(var experience in Model)
	{
        <tr>
		    <td>@Html.DisplayFor(model => experience.Title)</td>
    		<td>@Html.DisplayFor(model => experience.Description)</td>
    		<td>@Html.DisplayFor(model => experience.Locations.LocationCity)</td>
    		<td>@Html.DisplayFor(model => experience.Locations.LocationCountry)</td>
	    </tr>
	}
</table>

<button>@Html.ActionLink("Create new experience", "Create")</button>