@model TravelBlog.Models.Location

@{
    ViewData["Title"] = "Location - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Experiences at @Html.DisplayFor(model => model.LocationCity)</h1>

<table class="table">
    <tr>
        <th>Experiences</th>
   	</tr>

	@foreach (var experience in Model.Experiences)
	{
	    <tr>
            <td>@Html.ActionLink(experience.Title, "Details", "Experience", new { id = experience.ExperienceId})</td>
	    </tr>
	}
   
</table>

<button>@Html.ActionLink("Return to list", "Index")</button>
<button>@Html.ActionLink("Add Experience", "Create", "Experience", new { id = Model.LocationId })</button>